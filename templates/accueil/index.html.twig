{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Bienvenue</h1>

<p>Bienvenue sur la plateforme de gestion des conférences médicales.</p>

{% if not app.user %}
    <h2>Se connecter</h2>
    <p><a href="{{ path('app_login') }}" class="btn btn-success">Aller à la page de connexion</a></p>
    
    <h2>Comptes de test</h2>
    <p><strong>Admin :</strong> admin@example.com / password</p>
    <p><strong>Médecin :</strong> medecin@example.com / password</p>
{% else %}
    <h2>Navigation</h2>
    <ul>
        <li><a href="{{ path('app_conference_index') }}">Voir les conférences</a></li>
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('app_conference_new') }}">Créer une conférence</a></li>
        {% endif %}
    </ul>
{% endif %}

<style>
ul {
    list-style-position: inside;
    margin-top: 10px;
}

li {
    margin-bottom: 8px;
}

li a {
    color: #3498db;
}

li a:hover {
    text-decoration: underline;
}

p strong {
    display: block;
    margin-top: 5px;
}
</style>
{% endblock %}
