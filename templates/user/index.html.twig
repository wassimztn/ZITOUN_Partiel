{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; flex-wrap: wrap; gap: 10px;">
    <h1>Utilisateurs</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-success">+ Créer un médecin</a>
</div>

{% if users|length > 0 %}
    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>
                    {% if 'ROLE_ADMIN' in user.roles %}
                        Admin
                    {% elif 'ROLE_MEDECIN' in user.roles %}
                        Médecin
                    {% else %}
                        User
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-small">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-small btn-edit">Éditer</a>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit" class="btn btn-small btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucun utilisateur trouvé.</p>
{% endif %}
{% endblock %}
